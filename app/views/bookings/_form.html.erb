<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date_of_departure, "Departure date:" %>
    <%= f.date_select :date_of_departure %>
  </div>
  <div class="field">
    <%= f.label :date_of_arrival, "Return date:" %>
    <%= f.date_select :date_of_arrival %>
  </div>
  <div class="field">
    <%= f.select :collect,[["I want my car delivered",false],["I want to collect My Car",true]] %>
  </div>
  <div class="field">
	<%= f.label :car_class%>
	<%= f.select :car_class, [['Sport','sport'],['Peope Carrier','people_carrier'],['HatchBack','hatchback']]%>
  </div>
  <div class="field">
	<%= f.label :booking_postcode%>
	<%= f.text_field :booking_postcode%>
  </div>
  <div class="field">
	<%= f.label :booking_address%><br/>
	<%= f.text_area :booking_address, :size =>"25x3"%>
  </div>
  <div class="field">
	<%= f.label :promocode%>
	<%= f.text_field :promocode%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
