<h1>Login</h1>

<% if flash[:alert] %>
 <p class="alert"><%= flash[:alert] %></p>
<% end %>

<%= form_tag sessions_path do %>
 <div class="field">
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email] %>
 </div>
 <div class="field"
  <%= label_tag :password %>
  <%= password_field_tag :password %>
 </div>
 <div class="actions"><%= submit_tag "Login" %></div>
<% end %>
